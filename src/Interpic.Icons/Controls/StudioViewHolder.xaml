<UserControl x:Class="Interpic.UI.Controls.StudioViewHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interpic.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="48" Margin="5,5,0,5">
            <Image x:Name="imViewIcon" Width="48" Height="48" VerticalAlignment="Center"/>
            <TextBlock x:Name="lbViewTitle" FontFamily="Verdana" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="5,5,0,0"/>
        </StackPanel>
        <Grid x:Name="gViewContent" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"/>
    </Grid>
</UserControl>
